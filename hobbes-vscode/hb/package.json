{
    "name": "hb",
    "displayName": "calvin",
    "description": "language support for hobbes",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.47.0"
    },
    "categories": [
        "Snippets"
    ],
    "contributes": {
        "languages": [
            {
                "id": "hobbes",
                "aliases": [
                    "Hobbes",
                    "hobbes"
                ],
                "extensions": [
                    ".hb"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "hobbes",
                "scopeName": "source.hobbes",
                "path": "./grammar/hobbes.tmLanguage"
            }
        ],
        "snippets": [
            {
                "language": "hobbes",
                "path": "./.vscode/hobbes-autocomplete.code-snippets"
            }
        ]
    }
}
