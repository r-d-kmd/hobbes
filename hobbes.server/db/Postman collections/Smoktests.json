					"script": {
						"id": "05082b15-a24d-428f-b54e-fbe4fdb1719b",
						"exec": [
							"pm.test(\"Status code is 200\", function() {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"function testExists(url, descr) {",
							"    request =  {",
							"                url: url,",
							"                method: 'GET',",
							"                header: 'Authorization:Basic YWRtaW46cGFzc3dvcmQ='",
							"               }",
							"               ",
							"   pm.sendRequest(request, function(err, res) {",
							"        pm.test(descr, function() {",
							"            pm.expect(res).to.have.property('code', 200);",
							"        });",
							"});",
							"}",
							"",
							"testExists('http://localhost:5984/_users', '_users has been created')",
							"testExists('http://localhost:5984/_global_changes', '_global_changes has been created')",
							"testExists('http://localhost:5984/_replicator', '_replicator has been created')",
							"testExists('http://localhost:5984/cache', 'cache has been created')",
							"testExists('http://localhost:5984/cache/_design/default', 'cache default design doc has been created')",
							"testExists('http://localhost:5984/cache/default_hash', 'cache default design doc hash has been created')",
							"testExists('http://localhost:5984/configurations', 'configurations has been created')",
							"testExists('http://localhost:5984/configurations/_design/default', 'configurations default design doc has been created')",
							"testExists('http://localhost:5984/configurations/default_hash', 'configurations default design doc hash has been created')",
							"testExists('http://localhost:5984/rawdata', 'rawdata has been created')",
							"testExists('http://localhost:5984/rawdata/_design/default', 'rawdata default design doc has been created')",
							"testExists('http://localhost:5984/rawdata/default_hash', 'rawdata default design doc hash has been created')",
							"testExists('http://localhost:5984/transformations', 'transformations has been created')"
						],
						"type": "text/javascript"
					}
				}
			],
